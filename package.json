    "@parcel/transformer-typescript-tsc": "^2.12.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^8.57.1",
    "globals": "^15.14.0",
    "lit": "^3.1.4",
    "parcel": "^2.12.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "firebase": "^10.12.2",
    "rxjs": "^7.8.1"
  }
